<% layout('layouts/boilerplate') -%>
<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <div class="card mb-3">
      <div class="card-header">
        <h4 class="card-title">Kangen Kamu</h4>
      </div>
      <div class="card-body">
        <strong
          ><p>
            <small class="text-muted">Date: <%= transaction.date %></small>
          </p></strong
        >
        <h5 class="card-title">Summary</h5>
        <% for(let { product, qty } of transaction.products) {%>
        <div class="card mb-4">
          <div class="row">
            <div class="col-4">
              <img
                src="<%= product.image.url %>"
                alt=""
                style="border-radius: 5px; height: 128px; width: 128px"
              />
            </div>
            <div class="col-7 col-md-8 ms-auto">
              <div class="card-body">
                <h5 class="card-title m-0"><%= product.name %></h5>
                <p class="card-text m-0">
                  <small
                    >Price: Rp. <%= product.price.toLocaleString() %></small
                  >
                </p>
                <p class="card-text m-0">
                  <small>Quantity: <%= qty %></small>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <b>Total: Rp. <%= transaction.total.toLocaleString() %></b>
        </li>
      </ul>
      <div class="card-footer">
        <a
          class="btn btn-info btn-sm text-white"
          href="/transactions/<%= transaction._id %>/edit"
          >Edit</a
        >
        <form
          action="/transactions/<%= transaction._id %>?_method=delete"
          method="post"
          class="d-inline"
        >
          <button class="btn btn-danger btn-sm" type="submit">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
